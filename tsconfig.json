{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-backend"
  },
  "include": [
    "src/backend/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}


