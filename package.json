    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "vite": "^6.3.3",
    "tailwindcss": "^3.3.2",
    "drizzle-orm": "^0.29.0",
    "zod": "^3.22.4",
    "postgres": "^3.4.3",
    "postcss": "^8.4.27",
    "autoprefixer": "^10.4.14"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@types/node": "^20.5.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/express": "^4.17.17",
    "concurrently": "^8.0.1"
  }
}
